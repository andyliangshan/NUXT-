@import "./base.styl"

body
  background #fff

.privateLetter {
  width: 100%;
  position: relative;

  .submitBox {
    margin: 0;
    line-height 20px
    padding 15px
    background: #FAFAFA;

    .backtoPage {
      width 12px
      height 20px
      padding: 0;
      float left

      a {
        display: block;
        width: 100%;
        height: 100%;

        img {
          width 12px
          height 20px
          vertical-align: middle;
        }
      }
    }

    .title {
      padding: 0;
      text-align: center;
      font-size 18px
      color: #000;
      font-weight: bolder;
    }

    .submitBtn {
      text-align: center;
      padding: 0;

      button {
        display: inline-block;
        color: #138FF2;
        width: 100%;
        text-align: right;
        font-weight: bolder;
        border: none;
        padding: 0;
        background: none;
        font-size 16px
      }
    }
  }

  .privateLetterList {
    clear: both;
    padding-left 15px
    overflow hidden

    .list {
      clear: both;
      margin: 0;
      overflow hidden

      .letter-profile {
        max-width 50px
        padding-top 15px
        padding-bottom 15px
        position: relative;
        padding-right: 0;
        padding-left: 0;
        float left

        img {
          width 50px
          height 50px
        }

        em {
          display: block;
          font-style: normal;
          width 18px
          height 18px
          color: #fff;
          font-size 12px
          text-align: center;
          position: absolute;
          top: 5px;
          right: -8px;
          border-radius: 50%;
          background: #E14123;
        }
      }

      .letter-info {
        padding 20px 15px 15px 10px
        position: relative;
        border-bottom: 1px solid #e5e5e5;
        overflow auto

        .letter-title {
          color: #0d0d0d;
          font-size 16px
          font-weight: bolder;
          line-height: 1;
        }

        .letter-desc {
          clear: both;
          padding-top 10px
          font-size 12px
          color: #939393;
        }

        .letter-publish-time {
          position: absolute;
          right: 15px;
          top: 20px;
          font-size 12px
          color: #939393;
        }
      }
    }
  }
}
